{
    "tasks": [
        {
            "label": "meson setup",
            "type": "shell",
            "command": "meson setup builddir",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "meson compile",
            "type": "shell",
            "command": "meson compile -C builddir",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$meson-gcc",
            "dependsOn": "meson setup"
        },
        {
            "label": "meson test",
            "type": "shell",
            "command": "meson test -C builddir",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "dependsOn": "meson compile"
        }
    ],
    "version": "2.0.0"
}